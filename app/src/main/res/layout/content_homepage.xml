<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tw.edu.fcu.vegetablemaster.homepage"
    tools:showIn="@layout/activity_homepage">

    <ImageView
        android:id="@+id/homepagepicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/homepageorigin"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/homepagetitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="菜價先知"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <Button
        android:id="@+id/suggestveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日推薦蔬菜"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/homepagetitle"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/historyveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查詢歷史菜價"
        android:layout_marginRight="37dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/homepagetitle" />

    <Button
        android:id="@+id/forecastveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="預測漲跌幅"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/historyveg"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/homepagepicture"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/compareveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蔬菜水果比價"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/forecastveg"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好吃食譜連結"
        android:layout_marginRight="37dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/forecastveg" />

</android.support.constraint.ConstraintLayout>
