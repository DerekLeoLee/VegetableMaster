<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.edu.fcu.vegetablemaster.SuggestVeg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="7dp"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <TextView
        android:id="@+id/suggestvegtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="本 日 最 推 薦"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/suggestvegtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP 3"
        android:textSize="32sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/suggestvegtitle1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/top3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="1."
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/suggestvegtitle2"
        app:layout_constraintLeft_toRightOf="@+id/topImage01"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/top3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:text="2."
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/suggestvegtitle2"
        app:layout_constraintLeft_toRightOf="@+id/topImage02"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/top3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:text="3."
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/suggestvegtitle2"
        app:layout_constraintLeft_toRightOf="@+id/topImage03"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/topImage01"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suggestvegtitle2"
        app:srcCompat="@drawable/cabbage" />

    <ImageView
        android:id="@+id/topImage02"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suggestvegtitle2"
        app:srcCompat="@drawable/cabbage" />

    <ImageView
        android:id="@+id/topImage03"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="210dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suggestvegtitle2"
        app:srcCompat="@drawable/cabbage" />

</android.support.constraint.ConstraintLayout>
